<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#BED2DF"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp">

        <TextView
                android:id="@+id/idTVNote"
                android:text="제목"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginRight="3dp"
                android:layout_toStartOf="@+id/imageView" android:layout_marginEnd="15dp"/>
        <TextView
                android:id="@+id/idTVDate"
                android:text="내용"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTVNote"
                android:padding="4dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="54dp"
                android:layout_alignParentEnd="true"/>
        <ImageView
                android:layout_width="38dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_delete"
                app:tint="@color/material_on_surface_emphasis_medium"
                android:id="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="14dp"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>